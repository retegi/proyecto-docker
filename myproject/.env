# Configuración básica de Django
DJANGO_SETTINGS_MODULE=myproject.settings
SECRET_KEY=your-secret-key  # Reemplázalo con tu clave secreta
DEBUG=False  # Cambia a True solo para pruebas locales

# Configuración de la base de datos
DATABASE_URL=sqlite:///db.sqlite3  # Ajusta si usas otro tipo de base de datos

# Hosts permitidos
ALLOWED_HOSTS=127.0.0.1,localhost,yourdomain.com  # Ajusta según tus dominios

# Configuración de correo electrónico (opcional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Variables opcionales para servicios externos
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
